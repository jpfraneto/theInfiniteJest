<div class="headerBanner">
    <h1><a id="headerTitle" href="/">THE INFINITE JEST</a></h1>
    <% if(!currentUser){ %>
        <p><span id="pastSpan">History</span><span id="presentSpan" class="activeTense">Movie</span><span id="supportSpan">Support</span><span id="futureSpan"><a id="loginSpan">Login</a></span></p>
    <% } else { %>
        <p><span id="pastSpan">History</span><span id="presentSpan" class="activeTense">Movie</span><span id="supportSpan">Support</span><span id="loggedUserSpan">@<%=currentUser.username%></span><span id="logoutSpan">Logout</span></p>
    <% } %> 
</div>

<div class="box" id="systemDisplay">
    <div class="column left"></div>
    <div id="middleColumn" class="column middle text-center">

        <div id="recommendationFrame">
            <div class="iFrameContainer" id="mediaContainer">
                <iframe id="presentPlayer" width="640" height="360"
                src="https://www.youtube.com/embed/<%= youtubeID %>?start=<%=elapsedSeconds%>&autoplay=1&enablejsapi=1&mute=1"
                style="border: solid 4px #37474F"
                allow="autoplay"
                allowFullScreen 
                ></iframe>
            </div>
    
            <div class="controls" id="controlsDiv">
                <% if(!currentUser){ %>
                    <button id="favoritesButton" onclick="alert('Hello, you need to be logged in to add favorites!')">Favorites</button>
                <% } %> 
                <button  id="addFavoriteButton" style="display: none;">Add Favorite</button>
                <button  id="removeFavoriteButton" style="display: none;">Remove Favorite</button>
                <button id="recommendationInfoBtn">Recommendation Info</button>
                <div id="pastButtons" style="display: none;">
                    <button id="randomRecommendationBtn">Random</button>
                </div>
            </div>
    
            <div id="presentRecommendationInformation" style="display:none">
                <p><strong><span id="recommendationName"><%= presentRecommendation.name %></span></strong></p>
                <p><strong>Recommender: </strong><span id="recommenderName"><%= presentRecommendation.recommenderName %></span></p>
                <p><strong>Country: </strong><span id="userCountry"><%= presentRecommendation.country %></span></p>
                <p><strong>Why did you recommend this?: </strong><span id="recommendationDescription"><%= presentRecommendation.description %></span></p>
            </div>
        </div>

        <div id="thePast" style="display:none">
            <div id="pastLoading">
                <p>The past is loading...</p>
            </div>
            <div id="pastTableSpan" style="display:none">
                <p><strong>This are the recommendations that have been played in the past:</strong></p>
                <table id="pastTable" class="systemTable">
                    <thead>
                        <tr>
                            <th onclick="sortTable(0)">Index</th>
                            <th onclick="sortTable(1)">Country</th>
                            <th onclick="sortTable(2)">Name</th>
                            <th onclick="sortTable(3)">Duration</th>
                        </tr>
                    </thead>
                    <tbody id="pastTableBody"></tbody>
                </table>
            </div>
        </div>

        <div id="theSupport" style="display:none">
            <p>If you like this place and it adds value to your life, you can support me on Patreon by <a target="_blank" href="https://www.patreon.com/jpfraneto">clicking here</a>.</p>
        </div>

